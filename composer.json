{
    "name": "exolnet/laravel-closure-table",
    "description": "Closure Table database design pattern implementation for Laravel framework.",
    "keywords": [
        "exolnet",
        "laravel",
        "closure-table"
    ],
    "homepage": "https://github.com/eXolnet/laravel-closure-table",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre D'Eschambeault",
            "email": "adeschambeault@exolnet.com"
        },
        {
            "name": "Tom Rochette",
            "email": "trochette@exolnet.com"
        }
    ],
    "require": {
        "php": "^7.3",
        "illuminate/database": "5.5.*|5.6.*|5.7.*|5.8.*"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^6.0",
        "orchestra/testbench" : "^3.5",
        "squizlabs/php_codesniffer": "^3.6.0"
    },
    "autoload": {
        "psr-4": {
            "Exolnet\\ClosureTable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Exolnet\\ClosureTable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs -p --standard=PSR2 src tests",
        "lint-fix": "vendor/bin/phpcbf -p --standard=PSR2 src tests",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
